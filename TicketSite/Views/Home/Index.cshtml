<body class="page" >
<section class="banner" id="top">
    <div class="container">
        <div class="row">                            
                  <div classs="flightform">
                    <h4>  @Localizer["Uşak bileti ara"]</h4>
                    <hr />
                    <form id="form-submit" action="@Url.Action("UcusSorgusu", "Home")" , method="get">
                                <div class="container2">
                                     <div class="row">
                                       <div class="col-md-3 form-group">
                                            <fieldset>                                       
                                            <label for="Departure" class="control-label"> @Localizer["Nerden"]</label>
                                            <input name="Departure" id="Departure" class="form-control" />                                                                             
                                            </fieldset>
                                        </div>
       
                                       <div class="col-md-3 form-group">
                                            <fieldset>
                                        <label for="Destination" class="control-label">  @Localizer["Nereye"]</label>
                                             <input name="Destination" class="form-control" />
                                           </fieldset>
                                        </div>

                                       <div class="col-md-3">
                                         <fieldset>
                                        <label for="departuredate"> @Localizer["Kalkış tarihi"]</label>
                                           <input name="departuredate" type="text" class="form-control date" id="deparuredate" placeholder="Select date..." required="" onchange='this.form.()'>
                                         </fieldset>
                                        </div>
                                                              
                                           <div class="col-md-3 form-group">
                                                <fieldset>
                                       @*    <a asp-action="Index"> *@
                                        <button class="aramabutonu" type="submit" id="form-submit"> @Localizer["Bilet bul"]</button>
                                    </fieldset>
                                            </div>                           

                            </div>
                              </div>                           
                          </form>
                </div>
         </div>
    </div>
</section>
